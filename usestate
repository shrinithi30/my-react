import React, { useState } from 'react';

function Counter() {
  const [count, setCount] = useState(0); 

  const increment = () => {
    setCount(count + 1); // Update the state
  };

  return (
    <div>
      <h1>Counter: {count}</h1> {/* Display current count */}
      <button onClick={increment}>Increment</button>
    </div>
  );
}
